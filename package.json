{
  "name": "bingwallpaper-linux",
  "version": "1.0.0",
  "author": {
    "email": "sourav.bhattacharya3@gmail.com",
    "name": "Sourav Bhattacharya"
  },
  "description": "Bing Wallpaper App for Linux",
  "main": "./src/main.js",
  "license": "MIT",
  "scripts": {
    "watch": "webpack --config webpack.common.js --watch",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "electron-builder --linux snap"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "babel-loader": "^8.2.4",
    "css-loader": "^6.7.1",
    "electron": "^18.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "file-loader": "^6.2.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@fluentui/font-icons-mdl2": "^8.2.5",
    "@fluentui/react": "^8.63.0",
    "auto-launch": "^5.0.5",
    "axios": "^0.26.1",
    "bootstrap": "^5.1.3",
    "electron-log": "^4.4.6",
    "electron-squirrel-startup": "^1.0.0",
    "moment": "^2.29.2",
    "react": "17.0.2",
    "react-bootstrap": "^2.2.2",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.8",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "productName": "Bing Wallpaper",
              "icon": "./assets/bing128x128.png"
            }
          }
        }
      ]
    }
  },
  "build": {
    "appId": "bingwallpaper-linux",
    "productName": "Bing Wallpaper",
    "icon": "./assets/bing256x256.png",
    "snap": {
      "category": "Utilities",
      "summary": "Bing Wallpaper app for Ubuntu"
    }
  }
}
